<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlueLight">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/splash_logo_height"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:transitionName="@string/logo"
        app:srcCompat="@drawable/github_logo_for_anim" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/splash_text_bottom"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/github_connecting_people"
        android:textSize="@dimen/text_splash"
        android:transitionName="title" />

</RelativeLayout>